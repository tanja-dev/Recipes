<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content is-size-6">
        <h3><%= heading %></h3>
      </div>
    </div>

    <% if instruction.errors.any? %>
      <div class="column is-6 is-offset-3">
        <article class="message is-danger">
          <div class="message-body">
            <p><%= pluralize(instruction.errors.count, "error") %> prohibited this instruction
            from being saved:</p>
            <br>
            <p>
              <% instruction.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </p>
          </div>
        </article>
      </div>
    <% end %>

    <div class="column is-6 is-offset-3">
      <article class="media">
        <div class="media-content">
          <%= form_with model: [recipe, instruction], local: true do |form| %>
            <div class="field">
              <p class="control">
                <%= form.text_area :body, class: "textarea", placeholder: "Add a ingredient..." %>
              </p>
            </div>

            <nav class="level">
              <div class="level-left">
              </div>
              <div class="level-right">
                <div class="level-item">
                  <%= form.submit "Save", class: 'button is-info' %>
                </div>
                <div class="level-item">
                  <%= link_to "Cancel", recipe_path(recipe), class: 'button is-light' %>
                </div>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>





